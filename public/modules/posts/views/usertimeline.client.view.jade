div(data-ng-controller="UserTimelineController")
  .container.body
        .left-panel
          .profile
            .header
              .name {{ profile.name }}
              .screen-name @{{ profile.screenName }}
            .detail.last-section
              .col
                .text Post
                .number {{ profile.postCount }}
              .col
                .text Favourite
                .number {{ profile.favourite }}
        .main-panel
          .post(data-ng-repeat="post in posts | orderBy:'-postTime'", data-ng-class="{'first-item' : $first}")
            .name
              | {{ post.name }}
            .screen-name
              | @{{ post.screenName }}
            .post-content(ng-bind-html="post.postContent | linky")
              | {{ post.postContent }}
            .post-detail
              | Subject : {{ post.postSubject }} &nbsp&nbsp Type : {{ post.postType }} &nbsp&nbsp Category : {{ post.postCat }} &nbsp&nbsp  Rating : {{ post.rating }}